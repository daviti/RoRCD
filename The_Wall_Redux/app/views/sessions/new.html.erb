<h1>Sign In</h1>
<h4>New member? <a href='<%= new_user_path %>'>Sign up!</a></h4>

<% if flash[:error] %>
	<p class='error'><%= flash[:error] %></p>
<% elsif flash[:notice] %>
	<p class='notice'><%= flash[:notice] %></p>
<% end %>

<%= simple_form_for(:session, url: sessions_path) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.submit 'Sign In', class: 'btn-primary form-button' %>
<% end %>
